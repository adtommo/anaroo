{
  "name": "@anaroo/backend",
  "version": "0.1.5",
  "type": "commonjs",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "dev:ts-node": "nodemon",
    "build": "tsc && cp -r src/data dist/data",
    "start": "node dist/server.js",
    "generate:words": "tsx src/scripts/generate-words.ts",
    "seed:words": "tsx src/scripts/seed-anagram-groups.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@anaroo/shared": "*",
    "cors": "^2.8.6",
    "dotenv": "^17.2.4",
    "express": "^5.2.1",
    "express-rate-limit": "^8.2.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.3",
    "leo-profanity": "^1.9.0",
    "mongoose": "^9.1.6",
    "redis": "^5.10.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^25.2.2",
    "nodemon": "^3.1.11",
    "ts-node": "^10.9.2",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
}
